<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Catch Mind
        link(rel="stylesheet", href="/styles.css")
        script(defer src="/socket.io/socket.io.js")
        script(defer src="/main.js")
    body
        .title Catch Mind
        .loginBox
            form#jsLogin(action="")
                input#jsNicknameInput(placeholder="Set your nickname", type="text", maxlength="15")
        .gameContainer#jsGame
            .chat
                ul.chatMessages
                form#chatForm(action="")
                    input#chatInput(placeholder="Send message to others", type="text", autocomplete="off")
                #logoutBtn(abbr="logout") X
            .systemAnnounces
        script.
            window.events = !{events}